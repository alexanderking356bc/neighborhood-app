{
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "plugins": ["@typescript-eslint"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "arrow-parens": 0,
    "@typescript-eslint/no-unused-vars": [ 2, { "argsIgnorePattern": "^_" } ]
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "packages/backend/tsconfig.json"
  }
}
